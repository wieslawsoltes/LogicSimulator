                      ItemTemplateSelector="{DynamicResource ModelDataTemplateSelector}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <controls:ContextCanvas Background="Transparent" AllowDrop="True" Width="1260" Height="891" ClipToBounds="False"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
    </ControlTemplate>

