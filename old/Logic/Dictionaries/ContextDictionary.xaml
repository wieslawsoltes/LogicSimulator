    <ControlTemplate x:Key="ContextTitleTemplateKey">
        <Canvas Background="Transparent" Width="1260" Height="891" ClipToBounds="False">
            <!-- page title -->
            <Grid Width="900" Height="135" Canvas.Left="100" Canvas.Top="100">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="{Binding Parent.Title.DocumentId}" Style="{DynamicResource TitleTextBlockStyleKey}"/>
                <TextBlock Grid.Row="1" Text="{Binding Parent.Title.DocumentTitle}" Style="{DynamicResource TitleTextBlockStyleKey}"/>
                <TextBlock Grid.Row="2" Text="{Binding Parent.Title.DocumentNumber}" Style="{DynamicResource TitleTextBlockStyleKey}"/>
            </Grid>
        </Canvas>
    </ControlTemplate>

    <Style x:Key="ContextContentControlStyleKey" TargetType="ContentControl">
        <Style.Triggers>
            <DataTrigger Binding="{Binding PageType}" Value="{x:Static model:PageType.Playground}">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate>
                            <Grid>
                                <!-- background -->
                                <Control Template="{DynamicResource PlaygroudLogicContextBackgroundKey}"/>
                                <!-- content -->
                                <ContentControl Template="{DynamicResource ContextTemplateKey}"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </DataTrigger>
            <DataTrigger Binding="{Binding PageType}" Value="{x:Static model:PageType.Logic}">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate>
                            <Grid>
                                <!-- background -->
                                <Control Template="{DynamicResource LogicContextBackgroundKey}"/>
                                <!-- content -->
                                <ContentControl Template="{DynamicResource ContextTemplateKey}"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </DataTrigger>
            <DataTrigger Binding="{Binding PageType}" Value="{x:Static model:PageType.Title}">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate>
                            <Grid>
                                <!-- background -->
                                <Control Template="{DynamicResource TitleContextBackgroundKey}"/>
                                <!-- content -->
                                <ContentControl Template="{DynamicResource ContextTitleTemplateKey}"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </DataTrigger>
            <DataTrigger Binding="{Binding PageType}" Value="{x:Static model:PageType.Undefined}">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate>
                            <Grid></Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </DataTrigger>
            <DataTrigger Binding="{Binding}" Value="{x:Null}">
