<Window x:Class="LogicSimulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:LogicSimulator"
        Title="LogicSimulator.Avalonia.WPF"
        Height="700" Width="800"
        WindowStartupLocation="CenterScreen" WindowState="Normal"
        SnapsToDevicePixels="True" UseLayoutRounding="False"
        TextOptions.TextFormattingMode="Display" 
        TextOptions.TextHintingMode="Auto" 
        TextOptions.TextRenderingMode="Auto">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>
    <Menu Grid.Row="0">
      <MenuItem Header="_File">
        <MenuItem Header="_Open..." Click="menuItemFileOpenDiagram_Click" />
        <Separator />
        <MenuItem Header="_Save..." Click="menuItemFileSaveDiagram_Click" />
        <Separator />
        <MenuItem Header="Ex_it" Click="menuItemFileExit_Click" />
      </MenuItem>
    </Menu>
    <TabControl Grid.Row="1">
      <TabItem Header="Diagram">
        <views:DiagramView />
      </TabItem>
      <TabItem Header="Model">
        <views:ModelView />
      </TabItem>
    </TabControl>
  </Grid>
</Window>
